@using CoffeeShop.Models;

<table class="table">
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Quantity</th>
        <th>Price</th>
    </tr>
    @foreach (Item x in ViewBag.ItemList)
    {
        <tr>
            <td>@x.Name</td>
            <td>@x.Description</td>
            <td>@x.Quantity</td>
            <td>@x.Price</td>
            <td><a href="/Home/EditItem?Name=@x.Name">Edit</a></td>
            <td><a href="/Home/DeleteItem?Name=@x.Name" onclick="return ConfirmDelete();">Delete</a></td>
        </tr>
    }

</table>
<br />
<h4>@Html.ActionLink("Add new item", "AddItem", "Home")</h4>

<h3>@ViewBag.ConfirmedItem</h3>

<script>
    function ConfirmDelete() {
        if (confirm("Are you sure you want to delete this?") === true) {
            return true;
        } else {
            return false;
        }
    }
</script>